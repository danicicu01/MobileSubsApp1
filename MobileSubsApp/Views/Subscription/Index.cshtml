@model IEnumerable<Subscription>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Subscription List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Subscription" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bag-plus"></i> &nbsp; Create New Subscription
            </a>
        </div>
    </div>
</div>
<br /><br />

<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Subscription Name
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Price Lei
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Subscription" asp-action="Edit" asp-route-id="@obj.ID"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Subscription" asp-action="Delete" asp-route-id="@obj.ID"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>